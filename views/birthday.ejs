<!DOCTYPE html>
<html>
<head>
	<title>Birthday Mail</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="javascripts/angular.min.js"></script>
    <script type="text/javascript" src="javascripts/birthday.js"></script>
</head>
<body ng-app="birthdayApp">
	<p>hi happy birthday</p>
  <div class="container" >
  <div ng-controller="birthdayController">
    <form class="form-group">
        <label>Name :</label>
        <input class="form-control" type="text" ng-model="birth.name">
        <label>Mobile :</label>
        <input class="form-control" type="text" ng-model="birth.mobile">
        <label>Email :</label>
        <input class="form-control" type="email" ng-model="birth.email">
        <label>Date of Birth :</label>
        <input class="form-control" type="date" ng-model="birth.dob">
        <br>
        <button class="btn btn-info" ng-click="sendmail(birth)">Submit</button>
    </form>
   </div> <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Mobile</th>
          <th>email</th>
          <th>dob</th>
        </tr>
      </thead>
      <tbody>
      	<h3 class="text-center">Upcoming Bdays</h3>
      	<tr ng-repeat="birth in birthdays">
      			<td>{{index+1}}</td>
      			<td>{{birth.Name}}</td>
      			<td>{{birth.Mobile}}</td>
          		<td>{{birth.Email}}</td>
          		<td>{{birth.dob}}</td>
          		<td>
          			<i class="glyphicon glyphicon-ok" ng-click=""></i>
          		</td>
      	</tr>   

      </tbody>
  	</table>
  </div>
</body>
</html>